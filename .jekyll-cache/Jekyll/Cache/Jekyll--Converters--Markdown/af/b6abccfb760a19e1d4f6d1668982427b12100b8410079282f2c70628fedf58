<span class="nt">h1</span>                              <span class="p">{</span> <span class="nl">font-size</span><span class="p">:</span> <span class="m">24px</span><span class="p">;</span> <span class="nl">line-height</span><span class="p">:</span> <span class="m">24px</span><span class="p">;</span> <span class="p">}</span>
